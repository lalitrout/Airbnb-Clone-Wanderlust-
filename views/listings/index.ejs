<% layout("/layouts/boilerplate") %>
<body>
    <h3>All listings <br><br>
        <!-- <form method="GET" action="/listing/new"> -->
            <!-- <button>Create new</button> -->
        <!-- </form> -->
    </h3>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
      <% for(listing of allListing){ %>
        <a class="card-link" href="/listings/<%= listing._id %>">
        <div class="card col listing-card" style="width: 18rem;">
          <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b>
              <br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
            </p>
          </div>
        </div>
        </a>
        <% } %>
    </div>

</body>
